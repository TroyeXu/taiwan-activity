{
  "name": "nuxt-tourism-map",
  "version": "1.0.0",
  "description": "Taiwan Tourism Activity Map - Discover amazing activities across Taiwan",
  "type": "module",
  "private": true,
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "generate": "nuxt generate && node scripts/copy-static-files.js",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "db:init": "node scripts/init-db.js",
    "db:reset": "rm -f database/tourism.sqlite && npm run db:init",
    "db:seed": "node scripts/init-db.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,md,yml,yaml,css,scss}\"",
    "test:filters": "tsx scripts/test-filters.ts",
    "test:manual": "echo '請參考 docs/filter-testing-guide.md 進行手動測試'",
    "pre-deploy": "node scripts/pre-deploy-check.js",
    "deploy": "npm run pre-deploy && npm run generate",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,vue,json,md,yml,yaml,css,scss}\"",
    "typecheck": "nuxt typecheck",
    "typecheck:ci": "nuxt typecheck --no-install",
    "check": "npm run lint && npm run format:check && npm run typecheck",
    "check:fix": "npm run lint:fix && npm run format",
    "precommit": "npm run check:fix",
    "clean": "rm -rf .nuxt .output node_modules/.cache"
  },
  "dependencies": {
    "@element-plus/nuxt": "^1.1.4",
    "@nuxt/image": "^1.11.0",
    "@pinia/nuxt": "^0.11.2",
    "@vueuse/nuxt": "^13.6.0",
    "better-sqlite3": "^9.2.2",
    "drizzle-orm": "^0.44.4",
    "element-plus": "^2.10.5",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "nanoid": "^5.0.4",
    "nuxt": "^4.0.2",
    "pinia": "^3.0.3",
    "sql.js": "^1.13.0",
    "vue": "^3.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@nuxt/devtools": "^2.6.2",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/better-sqlite3": "^7.6.8",
    "@types/leaflet": "^1.9.20",
    "@types/sql.js": "^1.4.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "sass-embedded": "^1.89.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vue-tsc": "^3.0.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,sass,less}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "taiwan",
    "tourism",
    "activities",
    "map",
    "vue",
    "nuxt"
  ],
  "author": "Your Name",
  "license": "MIT"
}
